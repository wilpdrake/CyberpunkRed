{{cprTrace "START ACTOR MIXIN ACTIONS CPR-REPAIR-GLYPH.HBS"}}
{{#if (cprCompare system.isBodyLocation "||" system.isHeadLocation) }}
  {{#if (cprCompare system.bodyLocation.ablation ">" 0) }}
    <a class="repair" data-item-id="{{this._id}}">
      <i class="fas fa-tools" data-tooltip="{{localize "CPR.actorSheets.commonActions.repair"}}"></i>
    </a>
  {{else}}
    {{#if (cprCompare system.headLocation.ablation ">" 0) }}
      <a class="repair" data-item-id="{{this._id}}">
        <i class="fas fa-tools" data-tooltip="{{localize "CPR.actorSheets.commonActions.repair"}}"></i>
      </a>
    {{/if}}
  {{/if}}
{{/if}}
{{#if system.isShield }}
  {{#if (cprCompare system.shieldHitPoints.value "<" (cprApplyUpgrade this system.shieldHitPoints.max "shieldHp")) }}
    <a class="repair" data-item-id="{{this._id}}">
      <i class="fas fa-tools" data-tooltip="{{localize "CPR.actorSheets.commonActions.repair"}}"></i>
    </a>
  {{/if}}
{{/if}}
{{cprTrace "END CPR-REPAIR-GLYPH.HBS"}}

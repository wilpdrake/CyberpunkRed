{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/CPRC-Role",
  "definitions": {
    "CPRC-Role": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "_id": {
          "$ref": "./components/id.json"
        },
        "_key": {
          "$ref": "./components/key.json"
        },
        "effects": {
          "$ref": "./components/effects.json"
        },
        "flags": {
          "$ref": "./components/flags.json"
        },
        "img": {
          "$ref": "./components/img.json"
        },
        "name": {
          "$ref": "./components/name.json"
        },
        "type": {
          "type": "string",
          "const": "role"
        },
        "system": {
          "$ref": "#/definitions/System"
        }
      },
      "required": ["_id", "_key", "effects", "img", "name", "system", "type"]
    },
    "System": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "abilities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RoleAbilities"
          }
        },
        "addRoleAbilityRank": {
          "type": "boolean"
        },
        "bonusRatio": {
          "type": "integer"
        },
        "bonuses": {
          "type": "array",
          "items": {}
        },
        "description": {
          "$ref": "./components/common/description.json"
        },
        "favorite": {
          "$ref": "./components/common/favorite.json"
        },
        "hasRoll": {
          "type": "boolean"
        },
        "isSituational": {
          "$ref": "#/definitions/isSituational"
        },
        "mainRoleAbility": {
          "type": "string",
          "enum": [
            "Maker",
            "Interface",
            "Credibility",
            "Medicine",
            "Operator",
            "Charismatic Impact",
            "Moto",
            "Teamwork",
            "Combat Awareness",
            "Backup"
          ]
        },
        "onByDefault": {
          "$ref": "#/definitions/onByDefault"
        },
        "rank": {
          "type": "integer",
          "const": 4
        },
        "skill": {
          "type": "string",
          "const": "--"
        },
        "source": {
          "$ref": "./components/common/source.json"
        },
        "stat": {
          "type": "string",
          "const": "--"
        },
        "universalBonuses": {
          "description": "May not be needed",
          "type": "array",
          "items": {}
        }
      },
      "required": [
        "abilities",
        "addRoleAbilityRank",
        "bonusRatio",
        "bonuses",
        "description",
        "favorite",
        "hasRoll",
        "mainRoleAbility",
        "rank",
        "skill",
        "source",
        "stat",
        "universalBonuses"
      ]
    },
    "onByDefault": {
      "type": "boolean"
    },
    "isSituational": {
      "type": "boolean"
    },
    "RoleAbilities": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "bonusRatio": {
          "type": "integer"
        },
        "bonuses": {
          "type": "array",
          "items": {}
        },
        "description": {
          "type": "string"
        },
        "hasRoll": {
          "type": "boolean"
        },
        "index": {
          "type": "integer"
        },
        "isSituational": {
          "$ref": "#/definitions/isSituational"
        },
        "multiplier": {
          "type": "number"
        },
        "name": {
          "type": "string",
          "enum": [
            "Damage Deflection",
            "Fabrication Expertise",
            "Field Expertise",
            "Fumble Recovery",
            "Initiative Reaction",
            "Invention Expertise",
            "Medical Tech (Cryosystem Operation)",
            "Medical Tech (Pharmaceuticals)",
            "Medical Tech",
            "Precision Attack",
            "Spot Weakness",
            "Surgery",
            "Threat Detection",
            "Upgrade Expertise",
            "Haggle"
          ]
        },
        "onByDefault": {
          "$ref": "#/definitions/onByDefault"
        },
        "rank": {
          "type": "integer",
          "enum": [0, 4]
        },
        "skill": {
          "anyOf": [
            {
              "description": "TODO: For some ungoldly reason we match '--' in code, this needs to be fixed",
              "type": "string"
            },
            {
              "description": "TODO: Not fully validated",
              "type": "object",
              "items": {}
            }
          ]
        },
        "stat": {
          "type": "string",
          "enum": ["--", "cool", "tech"]
        },
        "universalBonuses": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["initiative", "attack", "damage", "damageReduction", "fumbleRecovery"]
          }
        }
      },
      "required": [
        "bonusRatio",
        "bonuses",
        "description",
        "hasRoll",
        "index",
        "multiplier",
        "name",
        "rank",
        "skill",
        "stat",
        "universalBonuses"
      ]
    }
  }
}
